<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/search_view_light"
        layout="@layout/search_view_light"/>

    <include
        android:id="@+id/search_view_dark"
        layout="@layout/search_view_dark"
        android:visibility="gone" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:elevation="8dp"
        app:itemBackground="@color/primary"
        app:itemIconTint="@drawable/button_navigation_view"
        app:itemTextColor="@drawable/button_navigation_view"
        app:menu="@menu/bottom_navigation" />

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation">

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>