<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    app:cardBackgroundColor="@color/md_red_500"
    app:cardCornerRadius="2dp"
    app:cardElevation="@dimen/elevation_2dp"
    app:cardUseCompatPadding="true">

    <!-- todo background image with weather  -->
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/place_weather_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_margin">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/place_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text_dark"
            android:textSize="@dimen/text_size_24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Sossano" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/place_weather_summary_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:textColor="@color/primary_text_dark"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/place_tv"
            tools:text="Sereno" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/place_temperature_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text_dark"
            android:textSize="@dimen/text_size_45sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="40Â°" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>