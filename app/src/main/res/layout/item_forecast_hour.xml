<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_6dp"
    android:layout_marginEnd="@dimen/margin_12dp"
    android:layout_marginStart="@dimen/margin_12dp"
    android:layout_marginTop="@dimen/margin_6dp">

    <TextView
        android:id="@+id/hour_forecast_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test"
        android:textSize="@dimen/text_size_14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_forecast_hour"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/hour_forecast_hour"
        android:layout_marginTop="@dimen/margin_6dp"
        android:contentDescription="@string/desc_image"
        android:src="@drawable/clear_day"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hour_forecast_hour" />

    <TextView
        android:id="@+id/temperature_forecast_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_forecast_hour"
        android:layout_marginTop="@dimen/margin_6dp"
        android:text="@string/test"
        android:textSize="@dimen/text_size_16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_forecast_hour" />

</android.support.constraint.ConstraintLayout>
