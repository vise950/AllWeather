<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="6dp">

    <TextView
        android:id="@+id/date_forecast_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"
        android:text="Venerdi 6 Maggio "
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/condition_forecast_day"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_forecast_day"
        android:layout_margin="4dp"
        android:text="Nuvoloso"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/temperature_forecast_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="6dp"
        android:layout_toStartOf="@+id/icon_forecast_day"
        android:text="25Â°"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/icon_forecast_day"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="6dp"
        android:src="@drawable/clear_day"/>

</RelativeLayout>
