<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true">


            <RelativeLayout
                android:id="@+id/header_daily_fragment"
                android:layout_width="wrap_content"
                android:layout_height="170dp">

                <ImageView
                    android:id="@+id/image_daily_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/wallpapercity"/>


                <TextView
                    android:id="@+id/condition_daily_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:paddingBottom="8dp"
                    android:paddingStart="8dp"
                    android:text="Nuvoloso"
                    android:textColor="@color/secondary_text"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/location_daily_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/condition_daily_fragment"
                    android:paddingLeft="8dp"
                    android:text="Sossano"
                    android:textColor="#ffffff"
                    android:textSize="36sp"
                    android:textStyle="bold"/>
            </RelativeLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/forecast_daily_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header_daily_fragment"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="12dp"
                android:elevation="12dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header_daily_fragment"
                    android:layout_gravity="center_horizontal"
                    android:alignmentMode="alignBounds"
                    android:columnCount="4"
                    android:columnOrderPreserved="false"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:rowCount="3"
                    android:rowOrderPreserved="false"
                    android:useDefaultMargins="true">

                    <TextView
                        android:id="@+id/first_hour_forecast_daily"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:text="12:00"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/first_icon_forecast_daily"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:src="@drawable/clear_day"/>

                    <TextView
                        android:id="@+id/first_temperature_forecast_daily"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:text="24°"
                        android:textSize="18sp"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/second_hour_forecast_daily"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:text="15:00"
                        android:textSize="18sp"/>

                    <ImageView
                        android:id="@+id/second_icon_forecast_daily"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:src="@drawable/cloud_night"/>

                    <TextView
                        android:id="@+id/second_temperature_forecast_daily"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:text="29°"
                        android:textSize="18sp"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/third_hour_forecast_daily"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:text="18:00"
                        android:textSize="18sp"/>

                    <ImageView
                        android:id="@+id/third_icon_forecast_daily"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:src="@drawable/cloud"/>

                    <TextView
                        android:id="@+id/third_temperature_forecast_daily"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:text="32°"
                        android:textSize="18sp"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/forth_hour_forecast_daily"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_row="0"
                        android:layout_rowSpan="1"
                        android:layout_rowWeight="1"
                        android:text="21:00"
                        android:textSize="18sp"/>

                    <ImageView
                        android:id="@+id/forth_icon_forecast_daily"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_column="3"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:src="@drawable/snow"/>

                    <TextView
                        android:id="@+id/forth_temperature_forecast_daily"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:text="30°"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                </GridLayout>
            </android.support.v7.widget.CardView>


            <RelativeLayout
                android:id="@+id/label_daily_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/forecast_daily_fragment"
                android:layout_margin="24dp">

                <TextView
                    android:id="@+id/temperature_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_margin="6dp"
                    android:text="Temperatura:"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="6dp"
                    android:text="25°"
                    android:textSize="18sp"/>


                <TextView
                    android:id="@+id/wind_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/temperature_label"
                    android:layout_margin="6dp"
                    android:text="Vento:"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/wind_direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/wind_label"
                    android:layout_marginRight="6dp"
                    android:layout_toStartOf="@+id/wind"
                    android:text="N"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/temperature_label"
                    android:layout_margin="6dp"
                    android:text="4.3m/s"
                    android:textSize="18sp"/>


                <TextView
                    android:id="@+id/humidity_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wind_label"
                    android:layout_margin="6dp"
                    android:text="Umidità:"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/wind_label"
                    android:layout_margin="6dp"
                    android:text="75%"
                    android:textSize="18sp"/>


                <TextView
                    android:id="@+id/sunrise_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/humidity_label"
                    android:layout_margin="6dp"
                    android:text="Alba:"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/sunrise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/humidity_label"
                    android:layout_margin="6dp"
                    android:text="7:54"
                    android:textSize="18sp"/>


                <TextView
                    android:id="@+id/sunset_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sunrise_label"
                    android:layout_margin="6dp"
                    android:text="Tramonto:"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/sunset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/sunrise_label"
                    android:layout_margin="6dp"
                    android:text="21:54"
                    android:textSize="18sp"/>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>