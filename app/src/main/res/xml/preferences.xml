<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/first_category">

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/system_unit"
            android:entryValues="@array/system_value"
            android:key="systemUnit"
            android:title="@string/system"/>

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/theme_unit"
            android:entryValues="@array/theme_value"
            android:key="themeUnit"
            android:title="@string/theme"/>

        <SwitchPreference
            android:defaultValue="false"
            android:key="pref_geolocation"
            android:summary="@string/use_geolocation_summary"
            android:title="@string/use_geolocation_title"/>

    </PreferenceCategory>


</PreferenceScreen>