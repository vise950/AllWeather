<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MyThemeNoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="MyTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_out</item>
    </style>

    <style name="SearchViewLight">
        <item name="floatingSearch_backgroundColor">@color/white</item>
        <item name="floatingSearch_viewTextColor">@color/md_grey_500</item>
        <item name="floatingSearch_hintTextColor">@color/md_grey_500</item>
        <item name="floatingSearch_clearBtnColor">@color/md_grey_500</item>
        <item name="floatingSearch_leftActionColor">@color/md_grey_500</item>
        <item name="floatingSearch_menuItemIconColor">@color/md_grey_500</item>
        <item name="floatingSearch_suggestionRightIconColor">@color/md_grey_500</item>
    </style>

    <style name="SearchViewDark">
        <item name="floatingSearch_backgroundColor">@color/md_grey_500</item>
        <item name="floatingSearch_viewTextColor">@color/white</item>
        <item name="floatingSearch_hintTextColor">@color/white</item>
        <item name="floatingSearch_clearBtnColor">@color/white</item>
        <item name="floatingSearch_leftActionColor">@color/white</item>
        <item name="floatingSearch_menuItemIconColor">@color/white</item>
        <item name="floatingSearch_suggestionRightIconColor">@color/white</item>
    </style>

</resources>
